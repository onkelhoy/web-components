{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "inlineSources": false,
    "declarationMap": false,
    "incremental": false
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "lib/*.tsbuildinfo"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}